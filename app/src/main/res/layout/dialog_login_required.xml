<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <!-- Icono -->
    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_person_vector"
        android:contentDescription="@string/login_required"
        app:tint="?attr/colorPrimary" />

    <!-- Título -->
    <com.goodwy.commons.views.MyTextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_required"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Mensaje -->
    <com.goodwy.commons.views.MyTextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_required_message"
        android:textSize="16sp"
        android:gravity="center"
        android:alpha="0.8"
        android:layout_marginBottom="8dp" />

    <!-- Features List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">

        <!-- Feature 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_vector"
                android:layout_marginEnd="12dp"
                app:tint="?attr/colorPrimary" />

            <com.goodwy.commons.views.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/feature_cloud_sync"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Feature 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_vector"
                android:layout_marginEnd="12dp"
                app:tint="?attr/colorPrimary" />

            <com.goodwy.commons.views.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/feature_remote_actions"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Feature 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_vector"
                android:layout_marginEnd="12dp"
                app:tint="?attr/colorPrimary" />

            <com.goodwy.commons.views.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/feature_backup_settings"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botón Principal: Sign In -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/sign_in"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            style="@style/Widget.Material3.Button" />

        <!-- Botón Secundario: Skip -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip_for_now"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>

</LinearLayout>
